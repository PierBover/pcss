---
import BaseLayout from '../layouts/BaseLayout.astro';
import Dropdown  from '../components/Dropdown.astro';
import Turbo  from '../components/Turbo.astro';

const tintValues = [50, 100, 200, 300, 400, 500, 600, 700, 800, 900];
const sizes = ['mini', 'small', '', 'large', 'huge'];
---

<style>
	section {
		margin-bottom: 4rem;
	}

	.swatches {
		display: flex;
	}

	.swatch {
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		width: 4rem;
		height: 4rem;
		margin-right: .25rem;
	}

	.button-row {
		display: flex;
		align-items: center;
		gap: .5rem;
		margin-bottom: 2rem;
	}

	.button-row button {
		flex-shrink: 0;
	}

	.red {
		--p-accent-color-50: #fef2f2;
		--p-accent-color-100: #fee2e2;
		--p-accent-color-200: #fecaca;
		--p-accent-color-300: #fca5a5;
		--p-accent-color-400: #f87171;
		--p-accent-color-500: #ef4444;
		--p-accent-color-600: #dc2626;
		--p-accent-color-700: #b91c1c;
		--p-accent-color-800: #991b1b;
		--p-accent-color-900: #7f1d1d;
		--p-accent-color-950: #450a0a;
	}

	.green {
		--p-accent-color-50: #ecfdf5;
		--p-accent-color-100: #d1fae5;
		--p-accent-color-200: #a7f3d0;
		--p-accent-color-300: #6ee7b7;
		--p-accent-color-400: #34d399;
		--p-accent-color-500: #10b981;
		--p-accent-color-600: #059669;
		--p-accent-color-700: #047857;
		--p-accent-color-800: #065f46;
		--p-accent-color-900: #064e3b;
		--p-accent-color-950: #022c22;
	}

	.purple {
		--p-accent-color-50: #faf5ff;
		--p-accent-color-100: #f3e8ff;
		--p-accent-color-200: #e9d5ff;
		--p-accent-color-300: #d8b4fe;
		--p-accent-color-400: #c084fc;
		--p-accent-color-500: #a855f7;
		--p-accent-color-600: #9333ea;
		--p-accent-color-700: #7e22ce;
		--p-accent-color-800: #6b21a8;
		--p-accent-color-900: #581c87;
		--p-accent-color-950: #3b0764;
	}

	/*.red {
		--p-accent-color-50: #fef2f2;

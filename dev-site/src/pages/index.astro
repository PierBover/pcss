					<option value="">Lorem ipsum</option>
				</select>
			</div>
			<fieldset>
				<legend>Some checkboxes</legend>
				<div class="form-control checkbox">
					<input type="checkbox" id="checkbox_1" checked>
					<label for="checkbox_1">Lorem ipsum</label>
				</div>
				<div class="form-control checkbox">
					<input type="checkbox" id="checkbox_2">
					<label for="checkbox_2">Lorem ipsum</label>
				</div>
				<div class="form-control checkbox">
					<input type="checkbox" id="checkbox_3">
					<label for="checkbox_3">Lorem ipsum</label>
				</div>
			</fieldset>
			<fieldset>
				<legend>Some radio buttons</legend>
				<div class="form-control radio">
					<input type="radio" name="test_radio" id="radio_1" checked>
					<label for="radio_1">Lorem Lorem ipsum</label>
				</div>
				<div class="form-control radio">
					<input type="radio" name="test_radio" id="radio_2">
					<label for="radio_2">Lorem Lorem ipsum</label>
				</div>
				<div class="form-control radio">
					<input type="radio" name="test_radio" id="radio_3">
					<label for="radio_3">Lorem Lorem ipsum</label>
				</div>
			</fieldset>

			<button>Submit</button>
		</form>

		<form style="width: 30rem;margin: 0 auto;">
			<div class="form-row">
				<div class="form-control">
					<label for="name">Name</label>
					<input type="text" name="sdfsdf" >
					<div class="info">Use your real name</div>
				</div>
				<div class="form-control">
					<label for="last-name">Last name</label>
					<input type="text" name="sdfsdfsd" value="Pepito">
				</div>
				<div class="form-control">
					<button>Submit</button>
				</div>
			</div>
		</form>
		<form style="width: 30rem;margin: 0 auto;">
			<div class="form-row">
				<input type="text" name="namesdfs" >
				<input type="text" name="lastsdfsdf-name" value="Pepito">
				<button>Submit</button>
			</div>
		</form>
	</section>

	<section>
		<h2>Text stuff</h2>
		<h1>H1 Lorem ipsum dolor sit amet <code>vel lacus eget erat</code></h1>

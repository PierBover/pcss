</style>

<BaseLayout>

	<h1>P CSS</h1>

	<section>
		<h2>Colors</h2>
		<h3>Accent tints</h3>
		<div class="swatches">
			{
				tintValues.map((tint) => (
					<div class="swatch" style={{backgroundColor:`var(--p-accent-color-${tint})`}}>{tint}</div>
				))
			}
		</div>
		<h3>Text color tints</h3>
		<div class="swatches">
			{
				tintValues.map((tint) => (
					<div class="swatch" style={{backgroundColor:`var(--p-text-color-${tint})`}}>{tint}</div>
				))
			}
		</div>
	</section>

	<section>
		<h2>Buttons</h2>

		<h3>Sizes</h3>
		<div class="button-row">
			{
				sizes.map((size) => (
					<button class={size}>Button {size || 'normal'}</button>
				))
			}
		</div>

		<h3>Variants</h3>
		<div class="button-row">
			<button>Normal button</button>
			<button disabled>Disabled button</button>
			<button class="pill">Pill button</button>
			<button class="outlined">Outlined button</button>
			<button class="subtle">Subtle button</button>
			<button class="text-only">Text only button</button>
		</div>

		<div class="button-row red">
			<button>Normal button</button>
			<button disabled>Disabled button</button>
			<button class="pill">Pill button</button>
			<button class="outlined">Outlined button</button>
			<button class="subtle">Subtle button</button>
			<button class="text-only">Text only button</button>
		</div>

		<div class="button-row green">
			<button>Normal button</button>
			<button disabled>Disabled button</button>
			<button class="pill">Pill button</button>
			<button class="outlined">Outlined button</button>
			<button class="subtle">Subtle button</button>
			<button class="text-only">Text only button</button>
		</div>

		<div class="button-row purple">
			<button>Normal button</button>
			<button disabled>Disabled button</button>
			<button class="pill">Pill button</button>
			<button class="outlined">Outlined button</button>
			<button class="subtle">Subtle button</button>
			<button class="text-only">Text only button</button>
		</div>

		<h3>With icons</h3>

		<div class="button-row">
			<div class="button-row">
				{
					sizes.map((size) => (
						<button class={size}>Button {size || 'normal'}<Dropdown/></button>
					))
				}
			</div>
		</div>
		<div class="button-row">
			<div class="button-row">
				{
					sizes.map((size) => (
						<button class={size}><Turbo/>Button {size || 'normal'}</button>
					))
				}
			</div>
		</div>
		<div class="button-row">
			{
				sizes.map((size) => (
					<button class={size}><Turbo/>Button {size || 'normal'}<Dropdown/></button>
				))
			}
		</div>
		<div class="button-row">
			<button><Turbo/> Button text</button>
			<button disabled><Turbo/> Button text</button>
			<button class="pill"><Turbo/> Button text</button>
			<button class="outlined"><Turbo/> Button text</button>
			<button class="subtle"><Turbo/> Button text</button>
			<button class="text-only"><Turbo/> Button text</button>
		</div>

		<h3>Full width</h3>

		<div class="button-row" style="width: 20rem;">
			<button class="full-width">Button text</button>
		</div>
		<div class="button-row" style="width: 20rem;">
			<button class="full-width">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" class="icon" fill="currentColor">
					<path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"/>
				</svg>
				Button text
			</button>
		</div>
		<div class="button-row" style="width: 20rem;">
			<button class="full-width">
				Button text
				<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="icon mla" viewBox="0 0 16 16">
					<path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
				</svg>
			</button>
		</div>

		<h3>Square button with icon</h3>

		<div class="button-row">
			<button class="icon-only"><Turbo/></button>
			<button disabled class="icon-only"><Turbo/></button>
			<button class="outlined icon-only"><Turbo/></button>
			<button class="subtle icon-only"><Turbo/></button>
			<button class="text-only icon-only"><Turbo/></button>
		</div>

		<h3>Circle button with icon</h3>

		<div class="button-row">
			<button class="icon-only circle"><Turbo/></button>
			<button disabled class="icon-only circle"><Turbo/></button>
			<button class="outlined icon-only circle"><Turbo/></button>
			<button class="subtle icon-only circle"><Turbo/></button>
			<button class="text-only icon-only circle"><Turbo/></button>
		</div>

		<h3>Loading</h3>

		<div class="button-row">
			<button class="loading mini">Lorem ipsum</button>
			<button class="loading small">Lorem ipsum</button>
			<button class="loading">Lorem ipsum</button>
			<button class="loading large">Lorem ipsum</button>
			<button class="loading huge">Lorem ipsum</button>
		</div>

		<h3>Loading custom icon</h3>

		<div class="button-row">
			<button class="loading-icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" class="icon glow" fill="white">
					<path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"/>
				</svg>
				Lorem ipsum dolor
			</button>
		</div>
	</section>

	<section>
		<h2>Forms</h2>
		<!--<form class="use-pseudo">
			<input type="text"  value="Lorem ipsum" required>
			<input type="text"  value="" required>
		</form>-->

		<br><br><br>

		<form style="width: 30rem;margin: 0 auto 4rem;" class="square">
			<div class="form-row">
				<div class="form-control">
					<label>
						Name
						<div class="info">Lorem ipsum</div>
					</label>
					<input type="text" name="nasdfsdfme" >
					<div class="info">Use your real name</div>
				</div>
				<div class="form-control">
					<label>Last name</label>
					<input type="text" name="last-nsdfsfame" class="valid" value="Pepito" disabled>
				</div>
			</div>
			<div class="form-row">
				<div class="form-control">
					<label>Email address</label>
					<input type="email" name="emsdfsdfail" required>
					<div class="info invalid">Please write a valid email</div>
				</div>
			</div>
			<div class="form-control">
				<label>Some select</label>
				<select>
					<option value="">Lorem ipsum</option>
					<option value="">Suspendisse potenti</option>
